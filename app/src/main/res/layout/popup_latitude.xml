<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="24dp"
    android:background="@drawable/card_branco"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="6dp">

    <TextView
        android:text="Latitude"
        android:textSize="20sp"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:text="Alterar a Latitude do Sistema."
        android:paddingTop="12dp"
        android:textSize="15sp"
        android:textColor="@color/grey"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtLatitudeAtual"
        android:text="Latitude Atual: 17.000"
        android:paddingTop="12dp"
        android:textSize="15sp"
        android:textColor="@color/grey"
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <com.google.android.material.textfield.TextInputLayout
        style="@style/InputStyle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Latitude">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/inputLatitude"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnCancelLatitude"
            android:text="Cancel"
            android:background="@drawable/button_border"
            android:textColor="@color/blue"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp" />

        <Space
            android:layout_width="16dp"
            android:layout_height="1dp" />

        <Button
            android:id="@+id/btnConfirmarLatitude"
            android:text="Confirmar"
            android:background="@drawable/button"
            android:textColor="@color/white"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="48dp" />

    </LinearLayout>

</LinearLayout>