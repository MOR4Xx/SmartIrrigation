<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context=".ui.Fragment.IrrigacaoFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="10dp">

            <Button
                android:id="@+id/btnmanual"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button"
                android:backgroundTint="@color/blue"
                android:text="Manual"
                android:textColor="@color/white" />

            <View
                android:layout_width="10dp"
                android:layout_height="1dp" />

            <Button
                android:id="@+id/btnautomatico"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border"
                android:backgroundTint="@color/invisivel"
                android:text="Automático"
                android:textColor="@color/blue" />
        </LinearLayout>

        <View
            android:layout_width="10dp"
            android:layout_height="5dp" />

        <LinearLayout
            android:id="@+id/frame_irrigacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ultima_irri"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/card"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Ultima Irrigação"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="10dp"
                    android:layout_height="5dp" />

                <TextView
                    android:id="@+id/umid_ultima_irri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Umidade antes da Irrigação: 30%"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/tempo_ultima_irri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Tempo: 00:00:00"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/vol_ultima_irri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Volume de água p/ Planta: 00,0L"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/vol_total_ultima_irri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Volume total de água: 00,0L"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/data_ultima_irri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Data: 00/00/0000"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/hora_ultima_irri"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Hora: 00:00:00"
                    android:textColor="@color/black" />
            </LinearLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="5dp" />

            <LinearLayout
                android:id="@+id/card_ativar_irrigacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/card"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Ativar Irrigação"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="5dp" />

                <Button
                    android:id="@+id/btn_ativar_irrigacao"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/button"
                    android:text="Ativar" />
            </LinearLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="5dp" />

            <LinearLayout
                android:id="@+id/card_parametros_irrigacao"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/card"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Parâmetros de Irrigação"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="5dp" />

                <TextView
                    android:id="@+id/kc_paran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Coeficiente de cultura (Kc): 1,4"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/espaco_paran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Espaçamento entre Plantas: 0,3m"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/canteiro_paran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Largura do canteiro: 0,3m"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/vazao_paran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Vazão do Gotejador: 2 L/h"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/gotejadores_paran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Gotejadores por planta: 1"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/qtd_plant_paran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Quantidade de Plantas: 30"
                    android:textColor="@color/black" />

                <TextView
                    android:id="@+id/umid_min_paran"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Umidade mínima do Solo: 50%"
                    android:textColor="@color/black" />

                <View
                    android:layout_width="15dp"
                    android:layout_height="5dp" />

                <Button
                    android:id="@+id/btn_alterar_parametros"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/button"
                    android:text="Alterar Parâmetros" />
            </LinearLayout>

            <View
                android:layout_width="10dp"
                android:layout_height="5dp" />

            <LinearLayout
                android:id="@+id/card_irrigacao_manual"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:background="@drawable/card"
                android:orientation="vertical"
                android:padding="10dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:text="Parâmetros de Irrigação Manual"
                    android:textColor="@color/black"
                    android:textSize="15dp"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:gravity="center"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Quantidade de Água"
                        android:textSize="14sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:orientation="horizontal">

                        <ImageButton
                            android:id="@+id/btnDiminuir"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/minus" />

                        <TextView
                            android:id="@+id/txtQuantidade"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingHorizontal="8dp"
                            android:text="50"
                            android:textSize="16sp" />

                        <ImageButton
                            android:id="@+id/btnAumentar"
                            android:layout_width="32dp"
                            android:layout_height="32dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:src="@drawable/add"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <SeekBar
                        android:id="@+id/seekBarAgua"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:max="100"
                        android:progress="50" />

                    <TextView
                        android:id="@+id/txtLitros"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="8dp"
                        android:text="50 L"
                        android:textSize="14sp" />
                </LinearLayout>

                <Button
                    android:id="@+id/btnAtivarManual"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:background="@drawable/button"
                    android:layout_gravity="center"
                    android:text="Ativar"
                    android:textColor="@android:color/white" />
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

</FrameLayout>
